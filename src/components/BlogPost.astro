---
interface Props {
  title: string;
  subtitle: string;
  isExpanded?: boolean;
}

const { title, subtitle, isExpanded = false } = Astro.props;
---
<article class="border-b border-gray-200 py-4">
  <button class="w-full text-left group" aria-expanded={isExpanded}>
    <div class="flex items-center">
      <span class="transform group-aria-expanded:rotate-180 transition-transform">
        {isExpanded ? '▼' : '▶'}
      </span>
      <h3 class="text-xl font-medium ml-2">{title}</h3>
    </div>
    <p class="text-gray-600 ml-6">{subtitle}</p>
  </button>
  {isExpanded && <slot />}
</article>